#!/bin/bash
#
# @(#) extract v0.1.0 2015-08-04
#
# usage:
#   extract path
#
# description:
#   extract unzips files
#
######################################################################

. "$DOTPATH"/etc/lib/vital.sh

extract() {
    if [ -z "$1" ]; then
        die "too few argument"
        return 1
    fi

    if [ -f "$1" ] ; then
        case "$1" in
            *.tar.bz2) tar xvjf   "$1" ;;
            *.tar.gz)  tar xvzf   "$1" ;;
            *.bz2)     bunzip2    "$1" ;;
            *.rar)     unrar x    "$1" ;;
            *.gz)      gunzip     "$1" ;;
            *.tar)     tar xvf    "$1" ;;
            *.tbz2)    tar xvjf   "$1" ;;
            *.tgz)     tar xvzf   "$1" ;;
            *.zip)     unzip      "$1" ;;
            *.Z)       uncompress "$1" ;;
            *.7z)      7z x       "$1" ;;
            *)         echo "'$1' cannot be extracted via >extract<" ;;
        esac
    else
        echo "'$1' is not a valid file"
        return 1
    fi
}

extract ${@+"$@"}
