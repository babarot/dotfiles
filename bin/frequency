#!/bin/bash
#
# @(#) frequency v0.1.0 2015-08-04
#
# Usage:
#   frequency file
#   cat file | frequency
#
# Description:
#   frequency counts frequent words
#
######################################################################

frequency() {
    ruby -F'[^a-zA-Z]+' -ane '
    BEGIN   { $words = Hash.new(0) }
    $F.each { |word| $words[word.downcase] += 1 }
    END     { $words.each { |word, i| printf "%3d %s\n", i, word } }
    ' <"${1:-/dev/stdin}" | sort -nr
}

frequency ${@+"$@"}
